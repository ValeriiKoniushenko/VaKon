<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/va_kon_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_header_height"
        android:background="@color/black"
        android:src="@drawable/vakon"
        android:padding="20dp"
        android:layout_centerInParent="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/va_kon_image"
        android:orientation="vertical"
        android:padding="@dimen/menu_header_paddings">

        <TextView
            android:id="@+id/va_kon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/menu_header_topic_size"/>

        <TextView
            android:id="@+id/va_kon_github_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/va_kon_github_link"
            android:textColor="@color/white"
            android:autoLink="web"
            android:layout_below="@id/va_kon"
            android:textColorLink="@color/white"
            android:textSize="@dimen/menu_header_link_size"/>
    </RelativeLayout>

</RelativeLayout>